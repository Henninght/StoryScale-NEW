# StoryScale Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_PROVIDER=anthropic # Use 'anthropic' for Claude or 'openai' for GPT

# Research APIs (Optional)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Stripe Payment Processing (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Redis Cache (Optional - for production)
REDIS_URL=your_redis_url

# Google OAuth (Optional - for authentication)  
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Development Flags (Optional)
MOCK_MODE=false # Set to true for development without API keys
ENABLE_MOCK_DATA=false
DEBUG_MODE=false

# Instructions for Vercel Deployment:
# 1. Go to your Vercel project dashboard
# 2. Navigate to Settings > Environment Variables
# 3. Add the required variables above (at minimum Supabase and AI provider keys)
# 4. Redeploy your project

# The application will work in guest mode without these variables,
# but AI features and cloud saving require the appropriate keys.